{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "TailwindCSS",
  "title": "Configure TailwindCSS",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project to configure TailwindCSS for",
      "$default": {
        "$source": "projectName"
      }
    },
    "skipTailwindConfig": {
      "type": "boolean",
      "description": "Skip updating tailwind.config.js",
      "default": false
    },
    "skipStylesUpdate": {
      "type": "boolean",
      "description": "Skip updating styles.css",
      "default": false
    }
  },
  "required": ["project"]
}
