{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "TailwindCSS",
  "title": "Configure TailwindCSS",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project to configure TailwindCSS for",
      "$default": {
        "$source": "projectName"
      }
    },
    "skipTailwindConfig": {
      "type": "boolean",
      "description": "Skip updating tailwind.config.js",
      "default": false
    },
    "skipStylesUpdate": {
      "type": "boolean",
      "description": "Skip updating styles.css",
      "default": false
    },
    "skipHtmlUpdate": {
      "type": "boolean",
      "description": "Skip updating index.html",
      "default": false
    },
    "colorMode": {
      "type": "string",
      "description": "Color mode to use",
      "enum": ["light", "dark"],
      "default": "dark",
      "x-prompt": "What color mode do you want to use?"
    },
    "uiThemeColor": {
      "type": "string",
      "description": "UI theme color to use",
      "enum": ["theme-green", "theme-blue", "theme-red", "theme-orange", "theme-zinc"],
      "default": "theme-green",
      "x-prompt": "What UI theme color do you want to use?"
    }
  },
  "required": ["project"]
}
